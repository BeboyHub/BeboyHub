-- ‡πÇ‡∏´‡∏•‡∏î Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Window ‡∏´‡∏•‡∏±‡∏Å
local Window = Rayfield:CreateWindow({
    Name = "BeBoy Hub | Drill Digging Simulator",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "by TChay"
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Tabs
local MainTab = Window:CreateTab("Main", 4483362458)
local AutoEggTab = Window:CreateTab("Auto Egg", 4483362458)
local TeleportTab = Window:CreateTab("Teleport", 4483362458) -- üìç ‡πÄ‡∏û‡∏¥‡πà‡∏° Tab Teleport
local MiscTab = Window:CreateTab("Misc", 4483362458)

-------------------------------------------------
-- üåü Main Tab - Auto Money
-------------------------------------------------

local autoMoneyRunning = false

MainTab:CreateToggle({
    Name = "Auto Money (‡πÉ‡∏ä‡πâ Tool ‡∏ó‡∏µ‡πà‡∏ñ‡∏∑‡∏≠‡∏≠‡∏¢‡∏π‡πà)",
    CurrentValue = false,
    Callback = function(state)
        autoMoneyRunning = state
        if autoMoneyRunning then
            task.spawn(function()
                while autoMoneyRunning do
                    pcall(function()
                        local player = game:GetService("Players").LocalPlayer
                        local char = player.Character
                        if char then
                            local tool = char:FindFirstChildOfClass("Tool")
                            if tool then
                                game:GetService("ReplicatedStorage"):WaitForChild("GiveCash"):FireServer(tool)
                            end
                        end
                    end)
                    task.wait(0.2)
                end
            end)
        end
    end
})

-------------------------------------------------
-- üåü Auto Egg Tab - ‡∏ü‡∏±‡∏Å‡πÑ‡∏Ç‡πà‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
-------------------------------------------------

local selectedEgg = "Easter Egg"
local autoEggRunning = false

AutoEggTab:CreateInput({
    Name = "‡πÉ‡∏™‡πà‡∏ä‡∏∑‡πà‡∏≠‡πÑ‡∏Ç‡πà‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏ü‡∏±‡∏Å",
    PlaceholderText = "‡πÄ‡∏ä‡πà‡∏ô: Easter Egg",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        selectedEgg = text
    end
})

AutoEggTab:CreateToggle({
    Name = "Auto Hatch Egg",
    CurrentValue = false,
    Callback = function(state)
        autoEggRunning = state
        if autoEggRunning then
            task.spawn(function()
                while autoEggRunning do
                    pcall(function()
                        local args = {
                            [1] = selectedEgg,
                            [2] = 1
                        }
                        game:GetService("ReplicatedStorage"):WaitForChild("KPets"):WaitForChild("Events"):WaitForChild("Hatch"):FireServer(unpack(args))
                    end)
                    task.wait(1)
                end
            end)
        end
    end
})

-------------------------------------------------
-- üåü Teleport Tab - Auto Teleport
-------------------------------------------------

local teleportEnabled = false
local targetPosition = Vector3.new(-69.05, 6918.20, -1.04) -- üìç ‡∏à‡∏∏‡∏î Teleport

TeleportTab:CreateToggle({
    Name = "Auto Teleport ‡πÑ‡∏õ‡∏¢‡∏±‡∏á‡∏à‡∏∏‡∏î‡∏ü‡∏≤‡∏£‡πå‡∏°",
    CurrentValue = false,
    Callback = function(state)
        teleportEnabled = state
        if teleportEnabled then
            task.spawn(function()
                while teleportEnabled do
                    pcall(function()
                        local player = game.Players.LocalPlayer
                        if player and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                            player.Character.HumanoidRootPart.CFrame = CFrame.new(targetPosition)
                        end
                    end)
                    task.wait(1)
                end
            end)
        end
    end
})

-------------------------------------------------
-- üåü Misc Tab - Anti AFK
-------------------------------------------------

MiscTab:CreateButton({
    Name = "‡πÄ‡∏õ‡∏¥‡∏î Anti AFK (‡∏Å‡∏±‡∏ô‡∏´‡∏•‡∏∏‡∏î)",
    Callback = function()
        local vu = game:GetService("VirtualUser")
        local player = game:GetService("Players").LocalPlayer

        player.Idled:Connect(function()
            pcall(function()
                vu:CaptureController()
                vu:ClickButton2(Vector2.new(0,0))
            end)
        end)

        Rayfield:Notify({
            Title = "Anti AFK ‡πÄ‡∏õ‡∏¥‡∏î‡πÅ‡∏•‡πâ‡∏ß!",
            Content = "‡∏Ñ‡∏∏‡∏ì‡∏à‡∏∞‡πÑ‡∏°‡πà‡∏´‡∏•‡∏∏‡∏î‡πÄ‡∏Å‡∏°",
            Duration = 5,
            Image = 4483362458,
            Actions = {
                Ignore = {
                    Name = "‡πÇ‡∏≠‡πÄ‡∏Ñ",
                    Callback = function() end
                }
            }
        })
    end
})
